# =============================================================================
# Kompetens â€” Environment Configuration
# Copy this file to .env and adjust values for your environment.
# =============================================================================

# --- PostgreSQL ---
POSTGRES_USER=kompetens
POSTGRES_PASSWORD=kompetens_dev
POSTGRES_DB=kompetens
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Async driver (runtime)
DATABASE_URL=postgresql+asyncpg://kompetens:kompetens_dev@db:5432/kompetens
# Sync driver (Alembic migrations)
DATABASE_URL_SYNC=postgresql+psycopg://kompetens:kompetens_dev@db:5432/kompetens

# --- FastAPI ---
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# --- vLLM (local LLM) ---
VLLM_BASE_URL=http://localhost:8001/v1
VLLM_MODEL=mistralai/Mistral-7B-Instruct-v0.3

# --- Whisper STT (local) ---
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# --- Piper TTS (local) ---
PIPER_MODEL_PATH=/models/piper/fr_FR-siwis-medium.onnx
PIPER_SAMPLE_RATE=22050

# --- Embeddings (local) ---
EMBEDDING_MODEL=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024

# --- Frontend ---
VITE_API_URL=http://localhost:8000
